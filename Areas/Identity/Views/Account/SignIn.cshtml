@model SignInModel

@{
    ViewBag.Title = "Sign in";
}

<div class="row justify-content-center pt-5">

    <div class="card">
        <div class="card-header text-center font-weight-bolder">
            Sign in to Grasshoppers
        </div>
        <div class="card-body">
            <form method="post" asp-area="Identity" asp-controller="Account" asp-action="SignIn">

                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" required/>
                    <span asp-validation-for="UserName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" required/>
                    <span asp-validation-for="Password"></span>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input"/>
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                </div>


                <button type="submit" class="form-control btn btn-success">Sign in</button>
            </form>
        </div>
        <div class="card-footer text-muted">
            <p class="card-text">
                New to Grasshoppers?
                <a class="card-link" asp-action="SignUp" asp-controller="Account">Create an account</a>
            </p>
        </div>
    </div>
</div>