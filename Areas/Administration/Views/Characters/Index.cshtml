@model PaginationViewModel<Character>

@{
    ViewBag.Title = "List of characters";
    Layout = "_Layout";
}

<h2>List of characters</h2>
<hr/>

@await Html.PartialAsync("_ActionBarPartial")

<table class="table table-striped table-bordered table-hover" id="dataTable">
    
    <thead>
    <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>Last time online</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var character in Model)
    {
        <tr>
            <td hidden>@character.Id</td>
            <td>@character.Name</td>
            <td>@character.Gender</td>
            <td>@character.LastTimeOnline</td>
            <td>

                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@character.Id">
                    Edit
                </a>
                |
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@character.Id">
                    Details
                </a>
                
            </td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("_PaginationPartial", Model, ViewData)