@model Character

@{
    ViewBag.Title = "Create a new character";
    Layout = "_Layout";
}

<h2>Create a new character</h2>

<hr/>

<div asp-validation-summary="All"></div>

<form asp-action="Create" method="post">
   
    <div class="form-group col-md-6">
        
        <label asp-for="Owner"></label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
            <option value="">-- Select character's owner --</option>
        </select>
        <span asp-validation-for="UserId"></span>

    </div>
    
    <div class="form-group col-md-6">
            
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Enter character's name" required/>
            <span asp-validation-for="Name"></span>
            
        </div>
        
    <div class="form-group col-md-6">
                
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control" asp-items="@(Html.GetEnumSelectList<CharacterGender>())">
            <option value="">-- Select character's gender --</option>
        </select>
        <span asp-validation-for="Gender"></span>
                
    </div>


    <button type="submit" class="btn btn-success">Create</button>
</form>
