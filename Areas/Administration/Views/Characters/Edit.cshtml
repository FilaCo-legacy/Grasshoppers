@model Character

@{
    ViewBag.Title = "Edit the character";
    Layout = "_Layout";
}

<h2>Edit @Model.Name</h2>

<hr/>

<div asp-validation-summary="All"></div>

<form asp-action="Edit" method="post">
   
    <div class="form-group col-md-6">
        
        <label asp-for="Owner"></label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
        </select>
        <span asp-validation-for="UserId"></span>

    </div>
    
    <div class="form-group col-md-6" hidden>
                
        <label asp-for="LastTimeOnline"></label>
        <input asp-for="LastTimeOnline" class="form-control" required/>
        <span asp-validation-for="LastTimeOnline"></span>
                
    </div>
    
    
    <div class="form-group col-md-6">
            
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Change character's name" required/>
        <span asp-validation-for="Name"></span>
            
    </div>
    
        
    <div class="form-group col-md-6">
                
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control" asp-items="@(Html.GetEnumSelectList<CharacterGender>())">
        </select>
        <span asp-validation-for="Gender"></span>
                
    </div>


    <button type="submit" class="btn btn-primary">Edit</button>
</form>
