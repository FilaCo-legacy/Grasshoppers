@model PaginationViewModel<User>

@{
    ViewBag.Title = "List of users";
    Layout = "_Layout";
}

<h2>List of users</h2>
<hr/>

@await Html.PartialAsync("_ActionBarPartial")

<table class="table table-striped table-bordered table-hover" id="dataTable">
    
    <thead>
    <tr>
        <th>Email</th>
        <th>Username</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td hidden>@user.Id</td>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>

                <a class="btn btn-sm btn-primary" asp-action="ChangeRoles" asp-route-id="@user.Id">
                    Manage access rights
                </a>

            </td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("_PaginationPartial", Model, ViewData)