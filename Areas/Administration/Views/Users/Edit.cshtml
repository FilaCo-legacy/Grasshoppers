@model EditUserModel

@{
    ViewBag.Title = "Edit users";
}

<form method="post" asp-action="Edit">
    <div asp-validation-summary="All"></div>
    @if (Model.UserIds.Count > 1)
    {
        <h2 class="col">Edit users</h2>
    }
    else
    {
        <h2 class="col">Edit user @Model.UserName</h2>
        <hr/>

        <div class="form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" placeholder="@Model.UserName"/>
            <span asp-validation-for="UserName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="@Model.Email"/>
            <span asp-validation-for="Email"></span>
        </div>
    }

    @foreach (var (roleName, state) in Model.UsersRoles)
    {
        var check = state == CheckboxState.Checked ? "checked" : "";
        
        <div class="custom-control custom-checkbox">
            <input id="@roleName"type="checkbox" class="custom-control-input" @check>
            <label class="custom-control-label" asp-for="UsersRoles"></label>
        </div>
    }

</form>