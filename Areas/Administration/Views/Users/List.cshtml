@model PaginationViewModel<User>

@{
    ViewBag.Title = "List of users";
    ViewData["Controller"] = "Roles";
    ViewData["Area"] = "Administration";
    Layout = "_Layout";
}

<p class="h2">List of users</p>

@await Html.PartialAsync("_CRUDPartial", ViewData)

<table class="table table-striped table-bordered table-hover">
    
    <thead>
    <tr>
        <th>Email</th>
        <th>Username</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
        </tr>
    }
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

@await Html.PartialAsync("_PaginationPartial", Model, ViewData)
