@model PaginationViewModel<User>

@{
    ViewBag.Title = "List of users";
    ViewData["Controller"] = "Users";
    ViewData["Area"] = "Administration";
    Layout = "_Layout";
}

<h2 class="col">List of users</h2>
<hr/>

@await Html.PartialAsync("_CRUDPartial", ViewData)

<table class="table table-striped table-bordered table-hover">
    
    <thead>
    <tr>
        <th>Email</th>
        <th>Username</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.UserName</td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("_PaginationPartial", Model, ViewData)