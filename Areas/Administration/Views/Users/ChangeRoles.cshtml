@model ChangeRoleViewModel

@{
    ViewBag.Title = "Manage access rights";
    Layout = "_Layout";
}

<h2>Manage roles of @Model.UserName</h2>

<hr/>

<form asp-action="ChangeRoles" method="post">
    <input type="hidden" name="id" value="@Model.Id"/>
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="check(@role.Name)" name="roles" value="@role.Name"
                       @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")>
                <label class="custom-control-label" for="check(@role.Name)">@role.Name</label>
            </div>
            <br/>
        }
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>