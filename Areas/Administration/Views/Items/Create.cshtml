@model Item

@{
    ViewBag.Title = "Create a new item";
    Layout = "_Layout";
}

<h2>Create a new item</h2>

<hr/>

<div asp-validation-summary="All"></div>

<form asp-action="Create" method="post">
   
    <div class="form-group col-md-6">
        
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter item's name" required/>
        <span asp-validation-for="Name"></span>

    </div>
        
    <div class="form-group col-md-6">
            
        <label asp-for="Description"></label>
        <input type="text" asp-for="Description" class="form-control" placeholder="Enter item's description" />
        <span asp-validation-for="Description"></span>
    
    </div>
    
    
    <div class="form-group col-md-6">
                
        <label asp-for="Rarity"></label>
        <select asp-for="Rarity" class="form-control" asp-items="@(Html.GetEnumSelectList<ItemRarity>())">
            <option value="">-- Select item's rarity --</option>
        </select>
        <span asp-validation-for="Rarity"></span>
                
    </div>


    <button type="submit" class="btn btn-success">Create</button>
</form>
