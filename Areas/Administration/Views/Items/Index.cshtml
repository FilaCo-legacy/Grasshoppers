@model PaginationViewModel<Item>

@{
    ViewBag.Title = "List of items";
    Layout = "_Layout";
}

<h2>List of items</h2>
<hr/>

@await Html.PartialAsync("_ActionBarPartial")

<table class="table table-striped table-bordered table-hover" id="dataTable">
    
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Rarity</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td hidden>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Rarity</td>
            <td>

                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                    Edit
                </a>
                |
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">
                    Details
                </a>
                
            </td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("_PaginationPartial", Model, ViewData)