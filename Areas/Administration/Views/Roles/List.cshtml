@model PaginationViewModel<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "List of roles";
    Layout = "_Layout";
}

<h2>List of roles</h2>
<hr/>

<a class="btn btn-success mb-3" asp-action="Create">
    Create a new role
</a> 

<table class="table table-striped table-bordered">
    
    <thead>
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
                
            </td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("_PaginationPartial", Model, ViewData)
    


