@model PaginationViewModel<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "List of roles";
    Layout = "_Layout";
}

<h2 class="col">List of roles</h2>
<hr/>

@await Html.PartialAsync("_ActionBarPartial", ViewData)


<table class="table table-striped table-bordered">
    
    <thead>
    <tr>
        <th>Name</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var role in Model)
    {
        <tr>
            <td hidden>@role.Id</td>
            <td>@role.Name</td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("_PaginationPartial", Model, ViewData)
    


