@model PaginationViewModel<Map>

@{
    ViewBag.Title = "List of maps";
    Layout = "_Layout";
}

<h2>List of maps</h2>
<hr/>

@await Html.PartialAsync("_ActionBarPartial")

<table class="table table-striped table-bordered table-hover" id="dataTable">
    
    <thead>
    <tr>
        <th>Map info</th>
    </tr>
    </thead>
    
    <tbody>
    @foreach (var map in Model)
    {
        <tr>
            <td hidden>@map.Id</td>
            <td>@map.MapInfo</td>
            <td>

                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@map.Id">
                    Edit
                </a>
                |
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@map.Id">
                    Details
                </a>
                
            </td>
        </tr>
    }
    </tbody>
</table>

@await Html.PartialAsync("_PaginationPartial", Model, ViewData)