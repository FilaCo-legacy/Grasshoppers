<div class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <a class="nav-link" >Hello, @User.Identity.Name</a>
    
    <form asp-area="Identity" asp-controller="Account" asp-action="LogOut" method="post">
        
        <button type="submit" id="logOutButton" class="btn navbar-btn">Log out</button>

    </form>
}
else
{
    <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="SignIn">Sign in</a>
    <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="SignUp">Sign up</a>
}
</div>