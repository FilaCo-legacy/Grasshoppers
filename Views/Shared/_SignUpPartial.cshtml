@model SignUpModel

<div class="jumbotron py-4 px-4" style="background-color: aliceblue">
<form method="post" asp-area="Identity" asp-controller="Account" asp-action="SignUp">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="UserName"></label><br/>
        <input asp-for="UserName" class="form-control" placeholder="Enter username"/>
        <span asp-validation-for="UserName"></span>
    </div>
    
    <div class="form-group">
            <label asp-for="Email"></label><br/>
            <input asp-for="Email" class="form-control" placeholder="Enter email"/>
            <span asp-validation-for="Email"></span>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

    <div class="form-group">
        <label asp-for="Password"></label><br/>
        <input asp-for="Password" class="form-control" placeholder="Enter password"/>
        <span asp-validation-for="Password"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirm"></label><br/>
        <input asp-for="PasswordConfirm" class="form-control" placeholder="Enter password again"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>

   <button type="submit" class="btn-lg btn-success">Sign up for Grasshoppers</button>
</form>
</div>